<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="find.eze.ezefind.Activities.PieChartHome">


    <include
        android:id="@+id/headertoolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_below="@+id/headertoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientimage">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true">


            <ImageView
                android:id="@+id/imageViewReport"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/round"
                android:layout_centerInParent="true"
                 />

            <ImageView
                android:id="@+id/imageViewInventory"
                android:layout_width="240dp"
                android:layout_height="125dp"
                android:layout_alignBottom="@+id/imageViewReport"
                android:layout_centerHorizontal="true"
                android:background="@drawable/semicircle"
                android:layout_margin="4dp"
                 />

            <ImageView
                android:id="@+id/imageViewSettings"
                android:layout_width="125dp"
                android:layout_height="200dp"
                android:background="@drawable/setting_image"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                 />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/imageViewSettings"
                android:layout_toEndOf="@+id/imageViewSettings"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/report_btn"
                android:id="@+id/imageView4" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/imageViewSettings"
                android:layout_alignStart="@+id/imageView4"
                android:background="@drawable/view_inventory"
                android:id="@+id/imageView5"
                android:padding="@dimen/image_size10"
                />

            <ImageView
                android:id="@+id/imageInnerCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/small_circle" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_above="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:background="@drawable/new_entry" />


        </RelativeLayout>


        <!-- <com.github.mikephil.charting.charts.PieChart
             android:id="@+id/piechart"
             android:layout_width="280dp"
             android:layout_height="280dp"
             android:layout_gravity="center"/>


             <ImageView
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:background="@drawable/newentry"
                 android:layout_gravity="center"/>-->



    </FrameLayout>
</RelativeLayout>
