<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/app_bg_color"
    android:layout_marginTop="5dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        card_view:cardBackgroundColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/row_color_open">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUpperText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moving Down Town..."
                    android:textColor="@color/white"
                    android:textSize="@dimen/image_size5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date: 12/18/14"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textColor="@color/white"
                        android:textSize="@dimen/image_size10"
                        android:layout_gravity="right"


                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="2dp"
                android:background="@color/row_color_open">


                <Button
                    android:id="@+id/btnOpen"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Open"
                    android:textAllCaps="false"
                    android:textColor="@color/greenbtn"
                    android:textSize="@dimen/image_size5"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    />

                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="@dimen/image_size5"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    />

                <Button
                    android:id="@+id/btnInvite"
                    android:layout_width="40dp"
                    android:layout_weight="1"
                    android:text="Invite"
                    android:textAllCaps="false"
                    android:textColor="@color/gradientdarkblue"
                    android:textSize="@dimen/image_size5"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    />



            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>